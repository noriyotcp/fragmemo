{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "outDir": "../build",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "lib": ["esnext", "dom"]
  },
  "include": ["./*.ts", "./*.js"]
}
