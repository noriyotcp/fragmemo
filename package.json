{
  "name": "fragmemo",
  "productName": "fragmemo",
  "version": "1.0.0",
  "description": "Snippet tool",
  "main": "build/main.js",
  "scripts": {
    "dev": "tsc -b main-process/ && vite",
    "build": "tsc --noEmit && vite build",
    "serve": "vite preview",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "cross-env ELECTRON=true vite build && tsc -b main-process/",
    "app:build": "yarn build:for:electron && yarn electron:builder",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:prettier": "prettier --write .",
    "test": "jest"
  },
  "keywords": [],
  "author": {
    "name": "noriyotcp",
    "email": "noriyo.akita@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@ui5/webcomponents": "^1.1.2",
    "electron-json-storage": "^4.5.0",
    "lit": "^2.1.1",
    "monaco-editor": "^0.31.1",
    "realm": "^10.11.0",
    "split.js": "^1.6.5"
  },
  "devDependencies": {
    "@swc/core": "1.2.135",
    "@swc/jest": "^0.2.17",
    "@types/electron-json-storage": "^4.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "@vitejs/plugin-vue": "^1.10.2",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^16.0.8",
    "electron-builder": "^22.14.5",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.4.7",
    "prettier": "2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "vite": "^2.7.13",
    "wait-on": "^6.0.0"
  },
  "build": {
    "appId": "com.electron.fragmemo",
    "productName": "fragmemo",
    "copyright": "Copyright Â© 2021 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
