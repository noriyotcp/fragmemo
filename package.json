{
  "name": "fragmemo",
  "productName": "fragmemo",
  "version": "1.0.0",
  "description": "Snippet tool",
  "main": "build/main.js",
  "scripts": {
    "dev": "tsc -b main-process/ && vite",
    "build": "tsc --noEmit && vite build",
    "serve": "vite preview",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "cross-env ELECTRON=true vite build && tsc -b main-process/",
    "app:build": "yarn build:for:electron && yarn electron:builder",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:prettier": "prettier --write .",
    "test": "jest"
  },
  "keywords": [],
  "author": {
    "name": "noriyotcp",
    "email": "noriyo.akita@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@material/mwc-list": "^0.25.3",
    "lit": "^2.0.2",
    "monaco-editor": "^0.30.0",
    "simple-json-db": "^1.2.3",
    "split.js": "^1.6.4"
  },
  "devDependencies": {
    "@swc/core": "1.2.106",
    "@swc/jest": "^0.2.5",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@vitejs/plugin-vue": "^1.9.4",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "electron": "^15.3.1",
    "electron-builder": "^22.11.7",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.3.1",
    "prettier": "2.4.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "vite": "^2.6.13",
    "wait-on": "^6.0.0"
  },
  "build": {
    "appId": "com.electron.fragmemo",
    "productName": "fragmemo",
    "copyright": "Copyright Â© 2021 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
