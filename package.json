{
  "name": "fragmemo",
  "productName": "fragmemo",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "dist/main.js",
  "scripts": {
    "start": "run-s clean build serve",
    "dev": "run-p dev:*",
    "dev:electron": "wait-on ./dist/index.html && cross-env NODE_ENV=\"development\" electron .",
    "dev:tsc": "tsc -w -p tsconfig.main.json",
    "dev:webpack": "webpack --watch --progress",
    "predev": "rimraf dist",
    "clean": "rimraf dist release",
    "serve": "electron .",
    "build": "cross-env NODE_ENV=\"development\" webpack --config webpack.config.prod.ts --progress",
    "build:prod": "cross-env NODE_ENV=\"production\" webpack --config webpack.config.prod.ts --progress",
    "build:pack": "ts-node ./scripts/build.ts",
    "package": "run-s clean build:prod build:pack",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint . --ext .ts,.tsx --fix",
    "lint:prettier": "prettier --write ."
  },
  "keywords": [],
  "author": {
    "name": "noriyotcp",
    "email": "noriyo.akita@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/mini-css-extract-plugin": "^2.3.0",
    "@types/node": "^16.10.2",
    "@types/react": "^17.0.26",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "@vercel/webpack-asset-relocator-loader": "1.7.0",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.0.0",
    "electron": "15.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-search-devtools": "^1.4.8",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.20.0",
    "fork-ts-checker-webpack-plugin": "^6.0.1",
    "html-webpack-plugin": "^5.3.2",
    "ifdef-loader": "^2.3.0",
    "mini-css-extract-plugin": "^2.3.0",
    "monaco-editor-webpack-plugin": "^4.2.0",
    "node-loader": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.42.1",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.0.0",
    "ts-loader": "^9.2.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.0.2",
    "wait-on": "^6.0.0",
    "webpack": "^5.56.0",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "monaco-editor": "^0.28.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
