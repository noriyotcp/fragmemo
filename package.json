{
  "name": "fragmemo",
  "productName": "fragmemo",
  "version": "0.1.2",
  "description": "Snippet tool",
  "main": "build/main.js",
  "scripts": {
    "dev": "tsc -b main-process/ && vite",
    "build": "tsc --noEmit && vite build",
    "serve": "vite preview",
    "electron": "wait-on tcp:127.0.0.1:3000 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
    "electron:builder": "electron-builder",
    "build:for:electron": "cross-env ELECTRON=true vite build && tsc -b main-process/",
    "app:build": "yarn build:for:electron && yarn electron:builder",
    "app:build:mac:x64": "yarn build:for:electron && yarn electron:builder --mac --x64",
    "app:build:mac:arm64": "yarn build:for:electron && yarn electron:builder --mac --arm64",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:prettier": "prettier --write .",
    "test": "jest"
  },
  "keywords": [],
  "author": {
    "name": "noriyotcp",
    "email": "noriyo.akita@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@ui5/webcomponents": "^1.8.0",
    "electron-json-storage": "^4.5.0",
    "fast-json-patch": "^3.1.1",
    "lit": "^2.4.0",
    "monaco-editor": "^0.34.0",
    "realm": "^10.21.1",
    "split.js": "^1.6.5"
  },
  "devDependencies": {
    "@swc/core": "^1.3.4",
    "@swc/jest": "^0.2.23",
    "@types/electron-json-storage": "^4.5.0",
    "@types/jest": "^29.1.1",
    "@types/node": "^18.8.3",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.38.1",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "electron": "^21.0.1",
    "electron-builder": "^23.6.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.1.2",
    "prettier": "2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "vite": "^3.1.4",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.electron.fragmemo",
    "productName": "fragmemo",
    "copyright": "Copyright Â© 2021 ${author}",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "icons/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
